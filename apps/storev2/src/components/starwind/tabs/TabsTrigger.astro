---































































































































































































































































import type { HTMLAttributes } from "astro/types";
import { tv } from "tailwind-variants";

interface Props extends Omit<HTMLAttributes<"button">, "type" | "id" | "role"> {
  value: string;
}

export const tabsTrigger = tv({
  base: [
    "inline-flex grow items-center justify-center gap-2 border-3 border-black px-4 py-2 font-bold uppercase tracking-wide whitespace-nowrap transition-all text-sm",
    "data-[state=active]:bg-primary data-[state=active]:text-primary-foreground data-[state=active]:shadow-[4px_4px_0_0_#000] data-[state=active]:translate-x-[2px] data-[state=active]:translate-y-[2px]",
    "data-[state=inactive]:bg-background data-[state=inactive]:shadow-[6px_6px_0_0_#000]",
    "hover:shadow-[4px_4px_0_0_#000] hover:translate-x-[2px] hover:translate-y-[2px]",
    "[&_svg]:pointer-events-none [&_svg]:shrink-0 [&_svg:not([class*='size-'])]:size-4",
    "focus-visible:ring-4 focus-visible:ring-ring focus-visible:ring-offset-2 focus-visible:outline-none",
    "disabled:pointer-events-none disabled:opacity-50",
  ],
});

const { value, class: className, ...rest } = Astro.props;
---

<button
  class={tabsTrigger({ class: className })}
  data-slot="tabs-trigger"
  data-tabs-trigger
  data-value={value}
  data-state="inactive"
  role="tab"
  aria-selected="false"
  {...rest}
>
  <slot />
</button>
