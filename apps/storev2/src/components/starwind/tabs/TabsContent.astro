---































































































































import type { HTMLAttributes } from "astro/types";
import { tv } from "tailwind-variants";

interface Props extends Omit<HTMLAttributes<"div">, "id" | "role" | "tabindex" | "hidden"> {
  value: string;
}

export const tabsContent = tv({
  base: "mt-4 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-ring focus-visible:ring-offset-2",
});

const { value, class: className, ...rest } = Astro.props;
---

<div
  class={tabsContent({ class: className })}
  data-slot="tabs-content"
  data-tabs-content
  data-value={value}
  data-state="inactive"
  role="tabpanel"
  tabindex="0"
  hidden
  {...rest}
>
  <slot />
</div>
