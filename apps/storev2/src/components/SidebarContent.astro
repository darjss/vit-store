---

import SidebarUserSection from "@/components/auth/SidebarUserSection.astro";
import { createServerClient } from "@/lib/trpc";
import IconArrowRight from "~icons/ri/arrow-right-s-line";
import IconGrid from "~icons/ri/grid-line";
import IconHome from "~icons/ri/home-4-line";
import IconCart from "~icons/ri/shopping-cart-2-line";
import IconUser from "~icons/ri/user-line";

const cookieHeader = Astro.request.headers.get("cookie") || "";
const serverApi = createServerClient(cookieHeader, Astro.locals.runtime.env.server);

const categories = await serverApi.category.getAllCategoryNames.query();
const brands = await serverApi.brand.getAllBrands.query();
---

<div class="flex flex-col h-full bg-background">
    <!-- User Section at Top - Most Important -->
    <div class="p-4 pr-20 bg-secondary text-secondary-foreground relative">
        <SidebarUserSection server:defer>
            <div slot="fallback" class="h-12 bg-secondary-foreground/10 animate-pulse"></div>
        </SidebarUserSection>
    </div>

    <!-- Main Scrollable Area -->
    <div class="flex-1 overflow-y-auto">
        <!-- Quick Actions -->
        <div class="p-4 grid grid-cols-2 gap-3">
            <a 
                href="/" 
                class="flex flex-col items-center justify-center gap-2 p-4 bg-primary border-3 border-border shadow-hard-sm hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] transition-all active:bg-primary/80"
            >
                <IconHome class="w-6 h-6" />
                <span class="font-black text-xs uppercase tracking-wide">Нүүр</span>
            </a>
            
            <a 
                href="/products" 
                class="flex flex-col items-center justify-center gap-2 p-4 bg-background border-3 border-border shadow-hard-sm hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] transition-all active:bg-muted"
            >
                <IconGrid class="w-6 h-6" />
                <span class="font-black text-xs uppercase tracking-wide">Бүтээгдэхүүн</span>
            </a>
            
            <a 
                href="/cart" 
                class="flex flex-col items-center justify-center gap-2 p-4 bg-background border-3 border-border shadow-hard-sm hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] transition-all active:bg-muted"
            >
                <IconCart class="w-6 h-6" />
                <span class="font-black text-xs uppercase tracking-wide">Сагс</span>
            </a>
            
            <a 
                href="/profile" 
                class="flex flex-col items-center justify-center gap-2 p-4 bg-background border-3 border-border shadow-hard-sm hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] transition-all active:bg-muted"
            >
                <IconUser class="w-6 h-6" />
                <span class="font-black text-xs uppercase tracking-wide">Профайл</span>
            </a>
        </div>

        <!-- Categories - Horizontal Scroll -->
        <div class="px-4 pb-4">
            <h3 class="font-black text-xs uppercase tracking-wider text-muted-foreground mb-3 flex items-center gap-2">
                <span class="w-1.5 h-4 bg-primary"></span>
                Ангилал
            </h3>
            <div class="flex gap-2 overflow-x-auto scrollbar-hide pb-1 -mx-4 px-4">
                {categories.map((name: string) => (
                    <a 
                        href={`/products?category=${encodeURIComponent(name)}`} 
                        class="flex-shrink-0 px-4 py-2.5 bg-background border-3 border-border font-bold text-sm shadow-hard-sm hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] hover:bg-primary transition-all whitespace-nowrap"
                    >
                        {name}
                    </a>
                ))}
            </div>
        </div>

        <!-- Brands - Grid -->
        <div class="px-4 pb-4">
            <h3 class="font-black text-xs uppercase tracking-wider text-muted-foreground mb-3 flex items-center gap-2">
                <span class="w-1.5 h-4 bg-accent"></span>
                Брэндүүд
            </h3>
            {brands.length > 0 ? (
                <>
                    <div class="grid grid-cols-3 gap-2">
                        {brands.slice(0, 6).map((brand: { name: string; logoUrl?: string | null }) => (
                            <a 
                                href={`/products?brand=${encodeURIComponent(brand.name)}`} 
                                class="flex flex-col items-center justify-center p-3 bg-background border-3 border-border shadow-hard-sm hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] hover:bg-muted transition-all group aspect-square"
                            >
                                {brand.logoUrl ? (
                                    <img 
                                        src={brand.logoUrl} 
                                        alt={brand.name} 
                                        class="w-10 h-10 object-contain group-hover:scale-110 transition-transform" 
                                        loading="lazy"
                                    />
                                ) : (
                                    <div class="w-10 h-10 bg-muted border-2 border-border flex items-center justify-center text-sm font-black group-hover:bg-primary transition-colors">
                                        {brand.name.substring(0, 2).toUpperCase()}
                                    </div>
                                )}
                                <span class="text-[10px] font-bold text-center leading-tight truncate w-full mt-2 uppercase">
                                    {brand.name}
                                </span>
                            </a>
                        ))}
                        {/* Fill empty slots if less than 6 brands */}
                        {Array.from({ length: Math.max(0, 6 - brands.length) }).map(() => (
                            <div class="flex flex-col items-center justify-center p-3 bg-muted/30 border-3 border-border border-dashed aspect-square opacity-50">
                                <div class="w-10 h-10 bg-muted border-2 border-border flex items-center justify-center text-sm font-black">
                                    --
                                </div>
                                <span class="text-[10px] font-bold text-center leading-tight truncate w-full mt-2 uppercase text-muted-foreground">
                                    -
                                </span>
                            </div>
                        ))}
                    </div>
                    {brands.length > 6 && (
                        <a 
                            href="/products" 
                            class="mt-3 flex items-center justify-center gap-2 w-full p-3 bg-muted border-3 border-border font-bold text-sm hover:bg-primary transition-colors"
                        >
                            Бүх брэнд харах
                            <IconArrowRight class="w-4 h-4" />
                        </a>
                    )}
                </>
            ) : (
                <div class="text-center py-8 text-muted-foreground">
                    <p class="text-sm font-medium">Брэнд олдсонгүй</p>
                </div>
            )}
        </div>
    </div>

    <!-- Bottom Branding -->
    <div class="p-4 border-t-3 border-border bg-muted/50">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-primary border-3 border-border flex items-center justify-center font-black text-lg shadow-hard-sm">
                V+
            </div>
            <div>
                <span class="font-black text-sm block">ВитаБүүст</span>
                <span class="text-[10px] text-muted-foreground font-medium">© 2024</span>
            </div>
        </div>
    </div>
</div>

<script>
  // Close sidebar when navigation links are clicked
  // Use event delegation to handle dynamically added links
  function setupSidebarNavigation() {
    // Find the sidebar container - look for the dialog wrapper
    const sidebarContainer = document.querySelector('.starwind-dialog');
    if (!sidebarContainer) return;

    // Remove existing listener if any (using a data attribute to track)
    if ((sidebarContainer as any).__sidebarNavSetup) {
      sidebarContainer.removeEventListener('click', (sidebarContainer as any).__sidebarNavHandler);
    }

    // Create a single event handler using event delegation
    const handleLinkClick = (e: Event) => {
      const target = e.target as HTMLElement;
      const link = target.closest('a[href]') as HTMLAnchorElement;
      
      if (link && sidebarContainer.contains(link)) {
        // Find the close button and click it to trigger proper close animation
        const closeButton = sidebarContainer.querySelector('[data-slot="sheet-close"], .starwind-dialog-close') as HTMLButtonElement;
        if (closeButton) {
          // Use a small delay to ensure the click is processed
          setTimeout(() => {
            closeButton.click();
          }, 10);
        }
      }
    };

    // Store handler reference for cleanup
    (sidebarContainer as any).__sidebarNavHandler = handleLinkClick;
    (sidebarContainer as any).__sidebarNavSetup = true;

    sidebarContainer.addEventListener('click', handleLinkClick);
  }

  // Setup on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupSidebarNavigation);
  } else {
    setupSidebarNavigation();
  }

  // Setup after Astro navigation (for View Transitions)
  document.addEventListener('astro:after-swap', setupSidebarNavigation);
</script>
