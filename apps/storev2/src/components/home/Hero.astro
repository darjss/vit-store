---
import { Image } from "astro:assets";
import logo1 from "/public/logo1.png";
import logo2 from "/public/logo2.png";
import logo3 from "/public/logo3.png";
import logo4 from "/public/logo4.png";
import logo5 from "/public/logo5.png";
import logo7 from "/public/logo7.png";

---

<section
    class="relative overflow-hidden border-b-4 border-border py-12 md:py-20"
>
    <div class="container mx-auto px-4">
        <div class="max-w-3xl relative z-20">
            <h1
                class="text-5xl md:text-7xl font-black uppercase mb-6 tracking-tight"
            >
                Америкийн чанартай витаминууд
            </h1>
            <p class="text-xl md:text-2xl mb-8">
                АНУ-ын итгэмжлэгдсэн брендуудаас шууд импортолсон, таны эрүүл
                мэндэд зориулсан өндөр чанарын бүтээгдэхүүн.
            </p>

            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8 relative z-30"
            >
                <div
                    class="bg-white border-4 border-black p-4 shadow-[4px_4px_0_0_#000]"
                >
                    <div
                        class="text-3xl md:text-4xl font-black text-primary mb-1"
                    >
                        200+
                    </div>
                    <div class="text-xs md:text-sm font-bold uppercase">
                        Бүтээгдэхүүн
                    </div>
                </div>
                <div
                    class="bg-white border-4 border-black p-4 shadow-[4px_4px_0_0_#000]"
                >
                    <div
                        class="text-3xl md:text-4xl font-black text-primary mb-1"
                    >
                        50+
                    </div>
                    <div class="text-xs md:text-sm font-bold uppercase">
                        Дэлхийн брэнд
                    </div>
                </div>
                <div
                    class="bg-white border-4 border-black p-4 shadow-[4px_4px_0_0_#000]"
                >
                    <div
                        class="text-3xl md:text-4xl font-black text-primary mb-1"
                    >
                        10K+
                    </div>
                    <div class="text-xs md:text-sm font-bold uppercase">
                        Сэтгэл ханамжтай
                    </div>
                </div>
                <div
                    class="bg-white border-4 border-black p-4 shadow-[4px_4px_0_0_#000]"
                >
                    <div
                        class="text-3xl md:text-4xl font-black text-primary mb-1"
                    >
                        100%
                    </div>
                    <div class="text-xs md:text-sm font-bold uppercase">
                        Шалгагдсан
                    </div>
                </div>
            </div>

            <div class="flex flex-wrap gap-4 relative z-30">
                <a
                    href="/products"
                    class="inline-block px-8 py-4 bg-primary hover:bg-primary/90 text-primary-foreground font-bold text-lg uppercase tracking-wider rounded-none border-4 border-border shadow-[8px_8px_0_0_#000] transition-transform hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[4px_4px_0_0_#000] active:scale-[0.98]"
                >
                    Дэлгүүр үзэх
                </a>
            </div>
        </div>
    </div>

    <div
        class="absolute inset-0 w-full h-full overflow-hidden pointer-events-none"
    >
        <Image
            src={logo1}
            alt="Brand Logo"
            class="hidden md:block absolute w-24 md:w-32 lg:w-36 opacity-40 animate-float-1 top-[10%] right-[8%] rotate-[10deg]"
            width={144}
            height={144}
            loading="eager"
        />
        <Image
            src={logo4}
            alt="Brand Logo"
            class="hidden md:block absolute w-20 md:w-28 lg:w-32 opacity-35 animate-float-2 top-[5%] right-[25%] -rotate-[12deg]"
            width={128}
            height={128}
            loading="eager"
        />
        <Image
            src={logo5}
            alt="Brand Logo"
            class="hidden sm:block absolute w-24 md:w-32 lg:w-36 opacity-40 animate-float-3 top-[35%] right-[5%] -rotate-[5deg]"
            width={144}
            height={144}
            loading="eager"
        />
        <Image
            src={logo7}
            alt="Brand Logo"
            class="hidden lg:block absolute w-20 md:w-24 lg:w-28 opacity-35 animate-float-1 top-[40%] right-[30%] rotate-[5deg]"
            width={112}
            height={112}
            loading="eager"
        />
        <Image
            src={logo2}
            alt="Brand Logo"
            class="hidden md:block absolute w-24 md:w-32 lg:w-36 opacity-40 animate-float-2 bottom-[15%] right-[15%] -rotate-[5deg]"
            width={144}
            height={144}
            loading="eager"
        />
        <Image
            src={logo3}
            alt="Brand Logo"
            class="hidden sm:block absolute w-20 md:w-28 lg:w-32 opacity-35 animate-float-3 bottom-[8%] right-[35%] rotate-[8deg]"
            width={128}
            height={128}
            loading="eager"
        />

        <Image
            src={logo1}
            alt="Brand Logo"
            class="block sm:hidden absolute w-20 opacity-25 animate-float-1 top-[15%] right-[5%] rotate-[15deg]"
            width={80}
            height={80}
        />
        <Image
            src={logo2}
            alt="Brand Logo"
            class="block sm:hidden absolute w-24 opacity-20 animate-float-2 top-[45%] right-[8%] -rotate-[8deg]"
            width={96}
            height={96}
        />
        <Image
            src={logo3}
            alt="Brand Logo"
            class="block sm:hidden absolute w-18 opacity-25 animate-float-3 bottom-[10%] right-[10%] rotate-[12deg]"
            width={72}
            height={72}
        />
    </div>

    <div
        class="absolute -right-20 bottom-0 w-80 h-80 bg-accent/30 rounded-full blur-3xl -z-10"
    >
    </div>
    <div
        class="absolute -top-40 -left-40 w-96 h-96 bg-primary/20 rounded-full blur-3xl -z-10"
    >
    </div>
</section>
