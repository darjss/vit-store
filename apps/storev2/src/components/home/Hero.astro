---

import BrandMarquee from "./BrandMarquee.astro";
import Marquee from "./Marquee.astro";
---

<section class="relative w-full overflow-hidden bg-background border-b-2 border-border">
    <!-- Background Grid -->
    <div class="absolute inset-0 bg-grid-pattern opacity-10 pointer-events-none"></div>
    <div class="rotate-1 bg-background border-y-2 border-border transform scale-105">
        <BrandMarquee direction="right" speed="fast" className="bg-foreground text-background border-b-2 border-border" />
    </div>
    <div class="container mx-auto px-4 pt-20 pb-32 relative z-10">
        <div class="flex flex-col items-center text-center">
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-accent border-2 border-border shadow-hard-sm mb-8 rotate-[-2deg] hover:rotate-0 transition-transform duration-300">
                <span class="w-2 h-2 rounded-full bg-foreground animate-pulse"></span>
                <span class="font-bold text-sm uppercase tracking-wider">Монголын #1 Витамин Дэлгүүр</span>
            </div>

            <!-- Main Title -->
            <h1 class="text-7xl md:text-9xl font-black uppercase leading-[0.9] tracking-tighter mb-8 relative">
                <span class="block relative z-10 text-foreground mix-blend-hard-light">Vitamin</span>
                <span class="block text-stroke-2 text-transparent relative z-0 -mt-4 md:-mt-8">Store</span>
                
                <!-- Floating Elements -->
                <div class="absolute -top-10 -right-10 md:-right-20 w-24 h-24 md:w-40 md:h-40 bg-primary rounded-full border-4 border-border animate-float-slow -z-10 hidden md:block"></div>
                <div class="absolute top-1/2 -left-10 md:-left-20 w-16 h-16 md:w-32 md:h-32 bg-secondary text-secondary-foreground flex items-center justify-center border-4 border-border animate-float shadow-hard rotate-12 hidden md:flex">
                    <span class="text-4xl font-bold">★</span>
                </div>
            </h1>

            <p class="text-xl md:text-2xl font-medium max-w-2xl mb-12 leading-relaxed border-l-4 border-primary pl-6 text-left md:text-center md:border-l-0 md:pl-0">
                Эрүүл мэндээ <span class="bg-primary px-1 border border-border shadow-hard-sm">шинжлэх ухаанч</span> аргаар дэмж. 
                АНУ-ын шилдэг брэндүүдийн баталгаат бүтээгдэхүүн.
            </p>

            <div class="flex flex-col md:flex-row gap-6 w-full md:w-auto mb-16">
                <a href="/products" class="group relative px-8 py-4 bg-foreground text-background font-bold text-xl uppercase tracking-wider hover:-translate-y-1 hover:translate-x-1 transition-transform border-2 border-transparent">
                    <span class="relative z-10">Бүх бүтээгдэхүүн</span>
                    <div class="absolute inset-0 bg-primary translate-x-2 translate-y-2 -z-10 border-2 border-border group-hover:translate-x-3 group-hover:translate-y-3 transition-transform"></div>
                </a>
                
                <a href="/about" class="group px-8 py-4 bg-background text-foreground font-bold text-xl uppercase tracking-wider border-2 border-border hover:bg-muted transition-colors shadow-hard hover:shadow-hard-lg hover:-translate-y-1 transition-all">
                    Бидний тухай
                </a>
            </div>

            <!-- Brands Section -->
           

        </div>
    </div>

    <!-- Bottom Marquee -->
    <div class="rotate-1 bg-background border-y-2 border-border transform scale-105">
        <Marquee text="100% ОРИГИНАЛ • ШУУРХАЙ ХҮРГЭЛТ • ЧАНАРЫН БАТАЛГАА •" speed="slow" />
    </div>
</section>
