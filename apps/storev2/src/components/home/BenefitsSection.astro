---
const benefits = [
	{ title: "Үнэгүй хүргэлт", description: "€30-аас дээш захиалгад" },
	{
		title: "Шинжилгээнд тулгуурласан",
		description: "Баталгаажсан найрлагатай бүтээгдэхүүн",
	},
	{ title: "Баталгаат чанар", description: "Олон улсын стандартад нийцсэн" },
	{
		title: "Туслах үйлчилгээ",
		description: "Холбоо барих: support@vitstore.mn",
	},
];
---

<section class="container mx-auto px-4 py-12 md:py-16">
	<div class="bg-white border-3 md:border-4 border-black p-6 md:p-8 lg:p-12 shadow-[4px_4px_0_0_#000] md:shadow-[8px_8px_0_0_#000]">
		<div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
			{benefits.map((b) => (
				<div class="text-center">
					<div class="bg-primary border-3 md:border-4 border-black w-12 h-12 md:w-16 md:h-16 flex items-center justify-center mx-auto mb-3 md:mb-4">
						<span class="text-base md:text-lg font-black">✓</span>
					</div>
					<h3 class="font-black text-sm md:text-lg mb-1 md:mb-2">{b.title}</h3>
					<p class="text-xs md:text-sm font-bold text-black/70 leading-tight">{b.description}</p>
				</div>
			))}
		</div>
	</div>
</section>

