---







import IconMicroscope from "~icons/ri/microscope-line";
import IconTruck from "~icons/ri/truck-line";
import IconVerified from "~icons/ri/verified-badge-line";

const benefits = [
	{ 
		icon: "truck",
		title: "Үнэгүй хүргэлт", 
		description: "30,000₮-өөс дээш захиалгад",
		extra: "24-48 цагт хүргэнэ",
	},
	{
		icon: "microscope",
		title: "Шинжлэх ухаанч",
		description: "GMP, FDA стандарт",
		extra: "Лабораторид шалгагдсан",
	},
	{ 
		icon: "verified",
		title: "Баталгаат чанар", 
		description: "100% жинхэнэ бүтээгдэхүүн",
		extra: "Албан ёсны импортлогч",
	},
];

const iconComponents = {
	truck: IconTruck,
	microscope: IconMicroscope,
	verified: IconVerified,
};
---

<section class="container mx-auto px-4 py-12 md:py-16 border-t-2 border-border">
	<div class="mb-8 md:mb-12 text-center">
		<h2 class="text-3xl md:text-4xl lg:text-5xl font-black mb-2 md:mb-4 uppercase">
			Яагаад VitStore?
		</h2>
		<p class="text-base md:text-lg font-bold text-muted-foreground">
			Таны итгэл, эрүүл мэнд бидний тэргүүн зорилго
		</p>
	</div>
	<div class="grid grid-cols-1 sm:grid-cols-3 gap-4 md:gap-6">
		{benefits.map((b) => {
			const IconComponent = iconComponents[b.icon as keyof typeof iconComponents];
			return (
				<div class="bg-card border-2 border-border p-6 md:p-8 hover:shadow-hard transition-all hover:-translate-y-1 group">
					<div class="bg-primary border-2 border-border w-16 h-16 md:w-20 md:h-20 flex items-center justify-center mx-auto mb-4 md:mb-6 shadow-hard-sm group-hover:shadow-none group-hover:translate-x-1 group-hover:translate-y-1 transition-all">
						<IconComponent class="h-8 w-8 md:h-10 md:w-10" />
					</div>
					<h3 class="font-black text-lg md:text-2xl mb-2 md:mb-3 text-center uppercase">{b.title}</h3>
					<p class="text-sm md:text-base font-bold text-foreground leading-snug mb-1 text-center">{b.description}</p>
					<p class="text-xs md:text-sm font-semibold text-muted-foreground leading-snug text-center">{b.extra}</p>
				</div>
			);
		})}
	</div>
</section>
