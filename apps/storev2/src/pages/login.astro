---
import Layout from "@/layouts/Layout.astro";
import LoginForm from "@/components/auth/login-form";

export const prerender = true;

---

<Layout>
    <div class="relative min-h-screen bg-gradient-to-br from-muted/30 via-background to-muted/20">
        <div class="absolute top-10 left-10 w-20 h-20 border-4 border-black bg-primary shadow-[6px_6px_0_0_#000] rotate-12 hidden md:block"></div>
        <div class="absolute bottom-20 right-20 w-16 h-16 border-4 border-black bg-accent shadow-[6px_6px_0_0_#000] -rotate-12 hidden md:block"></div>
        <div class="absolute top-1/3 right-10 w-12 h-12 border-4 border-black bg-secondary shadow-[4px_4px_0_0_#000] rotate-45 hidden lg:block"></div>
        
        <LoginForm client:load>
            <div slot="fallback" class="container mx-auto px-4 py-16 flex items-center justify-center min-h-[70vh]">
                <div class="w-full max-w-md border-4 border-black bg-white p-8 shadow-[8px_8px_0_0_#000]">
                    <div class="h-12 bg-black/10 w-48 mx-auto mb-8 animate-pulse"></div>
                    <div class="space-y-4">
                        <div class="h-12 border-3 border-black bg-black/5 animate-pulse"></div>
                        <div class="h-12 border-3 border-black bg-black/5 animate-pulse"></div>
                        <div class="h-14 bg-primary/20 border-3 border-black shadow-[4px_4px_0_0_#000] animate-pulse"></div>
                    </div>
                </div>
            </div>
        </LoginForm>
    </div>
</Layout>