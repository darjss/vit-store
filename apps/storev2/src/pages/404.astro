---
import Layout from "@/layouts/Layout.astro";
import IconInfoCircle from "~icons/ri/information-line";
import IconQuestion from "~icons/ri/question-line";
import IconLightbulb from "~icons/ri/lightbulb-line";

export const prerender = true;

const title = "404 - Хуудас олдсонгүй";
const description = "Уучлаарай, таны хайж буй хуудас олдсонгүй.";
---

<Layout title={title} description={description} noindex>
    <div class="min-h-[80vh] flex items-center justify-center px-4 py-16">
        <div class="max-w-2xl w-full">
            <div
                class="bg-[oklch(0.92_0.18_15)] border-[4px] border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] p-8 md:p-12 relative overflow-hidden"
            >
                <div
                    class="absolute inset-0 opacity-10"
                    style="background-image: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(0,0,0,0.1) 10px, rgba(0,0,0,0.1) 20px);"
                >
                </div>

                <div class="relative z-10">
                    <!-- 404  -->
                    <div class="mb-6">
                        <h1
                            class="text-8xl md:text-9xl font-black leading-none animate-wiggle inline-block"
                        >
                            404
                        </h1>
                        <div
                            class="mt-4 h-2 w-32 bg-black shadow-[4px_4px_0px_0px_rgba(0,0,0,0.3)]"
                        >
                        </div>
                    </div>

                    <h2 class="text-3xl md:text-4xl font-black mb-4">
                        Хуудас олдсонгүй!
                    </h2>
                    <p class="text-lg md:text-xl font-bold mb-8 max-w-md">
                        Уучлаарай, таны хайж буй хуудас устсан эсвэл хэзээ ч
                        байгаагүй байна.
                    </p>

                    <div class="my-8 flex gap-4 flex-wrap">
                        <div
                            class="bg-white border-[3px] border-black p-4 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] animate-float inline-block"
                        >
                            <IconInfoCircle class="h-8 w-8" />
                        </div>
                        <div
                            class="bg-black text-white border-[3px] border-black p-4 shadow-[4px_4px_0px_0px_rgba(0,0,0,0.4)] animate-float-delayed inline-block font-black text-xl"
                        >
                            ?
                        </div>
                        <div
                            class="bg-primary border-[3px] border-black p-4 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] animate-float-slow inline-block"
                        >
                            <IconQuestion class="h-8 w-8" />
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-wrap gap-4 mt-8">
                        <a href="/">
                            <button
                                type="button"
                                class="bg-black text-white border-[3px] border-black px-8 py-4 font-black text-lg shadow-[4px_4px_0px_0px_rgba(0,0,0,0.3)] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,0.3)] transition-all"
                            >
                                ← Нүүр хуудас руу
                            </button>
                        </a>
                        <a href="/products">
                            <button
                                type="button"
                                class="bg-white border-[3px] border-black px-8 py-4 font-black text-lg shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] transition-all"
                            >
                                Бүтээгдэхүүн үзэх
                            </button>
                        </a>
                    </div>

                    <!-- Help Text -->
                    <div class="mt-8 pt-6 border-t-4 border-black/20">
                        <p class="font-bold text-sm flex items-center gap-2">
                            <IconLightbulb class="h-5 w-5" /> <strong>Зөвлөмж:</strong> URL хаягаа шалгаад дахин
                            оролдоно уу, эсвэл хайлт хийж үзнэ үү.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Shadow Element -->
            <div class="mt-2 ml-2 h-full w-full bg-black/10 -z-10"></div>
        </div>
    </div>
</Layout>

<style>
    @keyframes wiggle {
        0%,
        100% {
            transform: rotate(-3deg);
        }
        50% {
            transform: rotate(3deg);
        }
    }
</style>
