---

import { ClientRouter } from "astro:transitions";
import CartDrawer from "@/components/cart/cart-drawer";
import QueryDevtools from "@/components/query-devtools";
import SEO from "@/components/SEO.astro";
import { Toaster } from "@/components/ui/toast";
import Footer from "@/layouts/Footer.astro";
import Header from "@/layouts/Header.astro";
import MobileNavbar from "@/layouts/MobileNavbar.astro";
import PostHog from "../components/posthog.astro";

import "../styles/global.css";
import "../styles/starwind.css"

export interface Props {
	title?: string;
	description?: string;
	image?: string;
	imageAlt?: string;
	noindex?: boolean;
	nofollow?: boolean;
	canonical?: string;
}

const { title, description, image, imageAlt, noindex, nofollow, canonical } = Astro.props;
---

<!doctype html>
<html lang="mn">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />
        <SEO 
            title={title}
            description={description}
            image={image}
            imageAlt={imageAlt}
            noindex={noindex}
            nofollow={nofollow}
            canonical={canonical}
        />
        <ClientRouter />
        <PostHog />
    </head>
    <body>
        <div id="loading-bar" class="loading-bar">
            <div class="loading-bar-progress"></div>
        </div>

        <div
            class="absolute inset-0 opacity-10 pointer-events-none"
            style="background-image: linear-gradient(to right, #000 1px, transparent 1px), linear-gradient(to bottom, #000 1px, transparent 1px); background-size: 40px 40px;"
        >
        </div>

        <Header />
        

        <main class="relative z-10 flex-1">
            <slot />
            <Toaster client:idle />
        </main>

        <Footer />
        <MobileNavbar />
        
        <CartDrawer client:idle />
        		{import.meta.env.DEV && <QueryDevtools client:idle />}

    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
<script>
    document.addEventListener("astro:page-load", () => {
        console.log("âœ… View transition page load!");
    });

    document.addEventListener("astro:before-preparation", () => {
        console.log("ðŸš€ Starting navigation...");
        const loadingBar = document.getElementById("loading-bar");
        if (loadingBar) {
            loadingBar.classList.add("show");
        }
    });

    document.addEventListener("astro:after-preparation", () => {
        console.log("âœ¨ Navigation prepared!");
        const loadingBar = document.getElementById("loading-bar");
        if (loadingBar) {
            loadingBar.classList.remove("show");
        }
    });
</script>