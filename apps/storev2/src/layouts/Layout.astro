---
import { ClientRouter } from "astro:transitions";
import Header from "@/layouts/Header.astro";
import Footer from "@/layouts/Footer.astro";
import MobileNavbar from "@/layouts/MobileNavbar.astro";
import CartDrawer from "@/components/cart/cart-drawer";
import { Toaster } from "@/components/ui/toast";
import QueryDevtools from "@/components/query-devtools";

import "../styles/global.css";
import "../styles/starwind.css"
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Vitamin Store</title>
        <ClientRouter />
    </head>
    <body>
        <div id="loading-bar" class="loading-bar">
            <div class="loading-bar-progress"></div>
        </div>

        <div
            class="absolute inset-0 opacity-10 pointer-events-none"
            style="background-image: linear-gradient(to right, #000 1px, transparent 1px), linear-gradient(to bottom, #000 1px, transparent 1px); background-size: 40px 40px;"
        >
        </div>

        <Header />
        

        <main class="relative z-10 flex-1">
            <slot />
            <Toaster client:idle />
        </main>

        <Footer />
        <MobileNavbar />
        
        <CartDrawer client:idle />
        		{import.meta.env.DEV && <QueryDevtools client:idle />}

    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
<script>
    document.addEventListener("astro:page-load", () => {
        console.log("âœ… View transition page load!");
    });

    document.addEventListener("astro:before-preparation", () => {
        console.log("ðŸš€ Starting navigation...");
        const loadingBar = document.getElementById("loading-bar");
        if (loadingBar) {
            loadingBar.classList.add("show");
        }
    });

    document.addEventListener("astro:after-preparation", () => {
        console.log("âœ¨ Navigation prepared!");
        const loadingBar = document.getElementById("loading-bar");
        if (loadingBar) {
            loadingBar.classList.remove("show");
        }
    });
</script>

