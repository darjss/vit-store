---
import ClientRouter from "astro/components/ClientRouter.astro";
import "../styles/global.css";
import Header from "./Header.astro";
import { Toaster } from "@/components/ui/toast";
import Footer from "./Footer.astro";
import QueryDevtools from "@/components/query-devtools";
import MobileNavbar from "./MobileNavbar.astro";
import "../styles/starwind.css"
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Vitamin Store</title>
        <ClientRouter />
    </head>
    <body>
        <!-- Loading indicator for view transitions -->
        <div id="loading-bar" class="loading-bar">
            <div class="loading-bar-progress"></div>
        </div>

        <div class="min-h-screen w-full bg-white relative">
            <div
                class="absolute inset-0"
                style="background:#ffffff;background-image:radial-gradient(circle at 1px 1px, rgba(0,0,0,0.35) 1px, transparent 0);background-size:20px 20px;"
            >
            </div>
            <div
                class="absolute inset-0"
                style="background-image:radial-gradient(circle at 50% 40%, #FFF991 0%, rgba(255,255,255,0) 70%);opacity:.6;mix-blend-mode:multiply;"
            >
            </div>

            <Header />
      <main class="relative z-10">
                <slot />
                    <Toaster client:idle />
            </main>

            <Footer />
            <MobileNavbar />
        </div>
        		{import.meta.env.DEV && <QueryDevtools client:idle />}

    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
<script>
    document.addEventListener("astro:page-load", () => {
        console.log("âœ… View transition page load!");
    });

    document.addEventListener("astro:before-preparation", () => {
        console.log("ðŸš€ Starting navigation...");
        const loadingBar = document.getElementById("loading-bar");
        if (loadingBar) {
            loadingBar.classList.add("show");
        }
    });

    document.addEventListener("astro:after-preparation", () => {
        console.log("âœ¨ Navigation prepared!");
        const loadingBar = document.getElementById("loading-bar");
        if (loadingBar) {
            loadingBar.classList.remove("show");
        }
    });
</script>

