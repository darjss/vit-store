{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "wrangler deploy --dry-run",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "wrangler dev --port=3001",
    "start": "wrangler dev",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:push": "drizzle-kit push",
    "db:migrate:local": "wrangler d1 migrations apply vit-store --local",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply vit-store"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "zod": "^3.25.16",
    "@trpc/server": "^11.4.2",
    "@trpc/client": "^11.4.2",
    "@hono/trpc-server": "^0.4.0",
    "hono": "^4.8.2",
    "drizzle-orm": "^0.44.2",
    "nanoid": "^5.0.1",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0"
  },
  "devDependencies": {
    "tsc-alias": "^1.8.11",
    "typescript": "^5.8.2",
    "drizzle-kit": "^0.31.2",
    "wrangler": "^4.20.0"
  }
}
