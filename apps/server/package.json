{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "wrangler deploy --dry-run",
		"check-types": "tsc --noEmit",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "wrangler dev --port=3001",
		"start": "wrangler dev",
		"deploy": "wrangler deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"db:push": "drizzle-kit push",
		"db:migrate:local": "wrangler d1 migrations apply vit-store --local",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply vit-store"
	},
	"dependencies": {
		"@hono/trpc-server": "^0.4.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@trpc/client": "^11.4.3",
		"@trpc/server": "^11.4.3",
		"arctic": "^3.7.0",
		"drizzle-orm": "^0.44.4",
		"hono": "^4.8.12",
		"nanoid": "^5.1.5",
		"superjson": "^2.2.2",
		"zod": "^4.0.14"
	},
	"devDependencies": {
		"drizzle-kit": "^0.31.4",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.9.2",
		"wrangler": "^4.27.0"
	}
}
