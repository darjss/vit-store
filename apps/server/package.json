{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"exports": {
		".": {
			"bun": "./src/index.ts",
			"import": "./lib/src/index.js"
		},
		"./alchemy": {
			"bun": "./alchemy.run.ts",
			"import": "./lib/alchemy.run.js",
			"types": "./alchemy.run.ts"
		}
	},
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc --noEmit",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"dev": "alchemy dev --app server --stage dev",
		"deploy": "alchemy deploy --app server --stage prod --env-file ../../.env.prod",
		"destroy": "alchemy destroy --app server",
		"db:push": "drizzle-kit push",
		"db:migrate:local": "drizzle-kit migrate --config=../../packages/api/drizzle.local.config.ts",
		"db:studio": "drizzle-kit studio",
		"db:studio:local": "drizzle-kit studio --config=../../packages/api/drizzle.local.config.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate --config=../../packages/api/drizzle.local.config.ts",
		"db:migrate:prod": "drizzle-kit migrate --config=../../packages/api/drizzle.config.ts",
		"db:seed": "bun run src/lib/seed-postgres.ts"
	},
	"dependencies": {
		"@hono/trpc-server": "^0.4.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@trpc/client": "catalog:",
		"@trpc/server": "catalog:",
		"@upstash/redis": "^1.36.1",
		"@vit/api": "workspace:*",
		"@vit/logger": "workspace:*",
		"@vit/shared": "workspace:*",
		"arctic": "^3.7.0",
		"better-sqlite3": "^12.4.1",
		"drizzle-orm": "catalog:",
		"drizzle-seed": "^0.3.1",
		"hono": "catalog:",
		"nanoid": "^5.1.5",
		"postgres": "^3.4.7",
		"superjson": "^2.2.2",
		"valibot": "catalog:"
	},
	"devDependencies": {
		"@t3-oss/env-core": "catalog:",
		"alchemy": "catalog:",
		"drizzle-kit": "catalog:",
		"typescript": "catalog:",
		"tsdown": "catalog:",
		"@types/node": "^22.13.11",
		"dotenv": "catalog:",
		"@cloudflare/workers-types": "^4.20250822.0"
	}
}
