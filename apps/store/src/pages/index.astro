					<a href={`/product/${p.id}`} class="group relative block rounded-sm border-4 border-black bg-white shadow-[8px_8px_0_0_#000] hover:shadow-[4px_4px_0_0_#000] hover:translate-x-[4px] hover:translate-y-[4px] transition-all focus:outline-none focus:ring-4 focus:ring-black/40" aria-label={`${p.name} by ${p.brand}`}>
						<div class="relative aspect-[4/3] overflow-hidden border-b-4 border-black" style={`background:${p.color}`}>
							<div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_20%,rgba(0,0,0,0.07)_2px,transparent_0)] bg-[size:14px_14px]"></div>
							<div class="absolute left-3 top-3 rounded-sm border-2 border-black bg-accent text-accent-foreground px-3 py-1.5 text-xs font-black uppercase shadow-[3px_3px_0_0_#000]">
								✨ {p.badge}
							</div>
							<div class="absolute bottom-3 right-3 rounded-full border-2 border-black bg-white px-3 py-1 text-[10px] font-black uppercase shadow-[3px_3px_0_0_#000]">{p.brand}</div>
						</div>
						<div class="p-5">
							<h3 class="mb-2 text-lg font-black leading-snug group-hover:underline">{p.name}</h3>
							<div class="mb-3 flex items-center gap-2">
								<div class="flex items-center">
									<span class="text-yellow-500">★</span>
									<span class="ml-1 text-sm font-bold">{p.rating.toFixed(1)}</span>
								</div>
								<span class="text-xs text-black/50">({p.reviews} үнэлгээ)</span>
							</div>
							<div class="flex items-center justify-between">
								<div class="text-2xl font-black">€{p.price.toFixed(2)}</div>
								{p.inStock && (
									<div class="rounded-sm border-2 border-black bg-primary px-2 py-1 text-[10px] font-black uppercase shadow-[2px_2px_0_0_#000]">Бэлэн</div>
								)}
							</div>
						</div>
					</a>
				))}
			</div>
		</div>
	</section>

	<!-- Discount Products -->
	<section id="discount" class="relative py-12">
		<div class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8">
			<div class="mb-8 flex items-end justify-between">
				<div>
					<h2 class="text-3xl font-black tracking-tight sm:text-4xl mb-2">Хөнгөлөлттэй бүтээгдэхүүн</h2>
					<p class="text-base text-black/70">Тусгай үнийн саналууд</p>
				</div>
				<a href="/products?filter=discount" class="hidden sm:inline-flex items-center gap-2 px-4 py-2 border-2 border-black font-bold uppercase text-sm hover:bg-destructive/90 hover:text-destructive-foreground transition-colors">
					Бүгдийг харах →
				</a>
			</div>
			<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
