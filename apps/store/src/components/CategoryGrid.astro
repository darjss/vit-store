---
interface Category {
	title: string;
	description: string;
	color: string;
}

interface Props {
	categories: Category[];
}

const { categories } = Astro.props;
---

<section class="container mx-auto px-4 py-12 md:py-16">
	<div class="mb-8 md:mb-12 text-center">
		<h2 class="text-3xl md:text-4xl lg:text-5xl font-black mb-2 md:mb-4">Ангилал</h2>
		<p class="text-base md:text-lg font-semibold text-black/70">Өөрт хэрэгтэй бүтээгдэхүүнээ олоорой</p>
	</div>
	<div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-3 md:gap-6">
		{categories.map((c, i) => (
			<div class={`${c.color} border-3 md:border-4 border-black p-4 md:p-8 hover:shadow-[4px_4px_0_0_#000] md:hover:shadow-[8px_8px_0_0_#000] transition-all hover:-translate-y-1`}>
				<div class="bg-white border-3 md:border-4 border-black w-12 h-12 md:w-16 md:h-16 flex items-center justify-center mb-3 md:mb-4">
					<span class="text-lg md:text-xl font-black">{i + 1}</span>
				</div>
				<h3 class="font-black text-base md:text-xl mb-1 md:mb-2">{c.title}</h3>
				<p class="text-xs md:text-sm font-bold leading-tight">{c.description}</p>
			</div>
		))}
	</div>
</section>

