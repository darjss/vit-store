---
interface Props {
	product: {
		id: string;
		name: string;
		badge: string;
		price: number;
		originalPrice?: number | null;
		specs: string[];
		brand: string;
		color: string;
		inStock: boolean;
	};
	badgeStyle?: "featured" | "new" | "discount";
}

