{
	"name": "vit-store",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"hono": "^4.8.12",
			"@trpc/server": "^11.4.3",
			"@trpc/client": "^11.4.3",
			"dotenv": "^17.2.1",
			"valibot": "^1.1.0",
			"typescript": "^5.9.2",
			"tsdown": "^0.15.12",
			"drizzle-orm": "^0.44.4",
			"drizzle-kit": "^0.31.4",
			"alchemy": "0.83.1"
		}
	},
	"scripts": {
		"format": "biome format --write .",
		"check": "oxlint",
		"lint": "biome lint .",
		"lint:fix": "biome check --write .",
		"lint:fix:unsafe": "biome check --write --unsafe .",
		"dev": "turbo dev",
		"dev:alchemy": "alchemy dev --stage dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"deploy": "turbo deploy",
		"destroy": "turbo destroy",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:generate": "turbo -F @vit/api db:generate",
		"db:migrate": "turbo -F server db:migrate",
		"db:migrate:local": "turbo -F server db:migrate:local",
		"db:push": "turbo -F @vit/api db:push",
		"db:studio": "turbo -F server db:studio",
		"db:studio:local": "turbo -F server db:studio:local",
		"db:seed": "turbo -F server db:seed",
		"db:docker:up": "docker-compose up -d",
		"db:docker:down": "docker-compose down",
		"start:dev": "./start-dev.sh"
	},
	"dependencies": {
		"@corvu/drawer": "^0.2.4",
		"@typescript/native-preview": "^7.0.0-dev.20251203.1",
		"dotenv": "^17.2.3",
		"string-similarity": "^4.0.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@cloudflare/workers-types": "^4.20251202.0",
		"@types/node": "^22.19.1",
		"alchemy": "0.83.1",
		"miniflare": "^4.20251128.0",
		"oxlint": "^1.31.0",
		"tsdown": "catalog:",
		"turbo": "^2.6.1",
		"typescript": "^5.8.3",
		"zod": "4"
	},
	"packageManager": "bun@1.3.0",
	"patchedDependencies": {
		"@solid-primitives/storage@4.3.3": "patches/@solid-primitives%2Fstorage@4.3.3.patch"
	}
}
