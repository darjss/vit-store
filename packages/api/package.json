{
	"name": "@vit/api",
	"type": "module",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./db": {
			"types": "./src/db/index.ts",
			"default": "./src/db/index.ts"
		},
		"./db/schema": {
			"types": "./src/db/schema.ts",
			"default": "./src/db/schema.ts"
		},
		"./queries": {
			"types": "./src/queries/index.ts",
			"default": "./src/queries/index.ts"
		},
		"./integrations": {
			"types": "./src/lib/integrations/index.ts",
			"default": "./src/lib/integrations/index.ts"
		},
		"./*": {
			"types": "./src/*.ts",
			"default": "./src/*.ts"
		}
	},
	"scripts": {
		"build": "tsdown",
		"dev": "echo 'API package uses source files directly - no dev build needed'",
		"images:refine": "bun scripts/refine-and-migrate-images.ts",
		"products:dedupe": "bun scripts/dedupe-products.ts",
		"db:push": "drizzle-kit push",
		"db:push:local": "drizzle-kit push --config=./drizzle.local.config.ts",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate:local": "drizzle-kit migrate --config=./drizzle.local.config.ts",
		"db:studio": "drizzle-kit studio",
		"db:studio:local": "drizzle-kit studio --config=./drizzle.local.config.ts",
		"db:generate": "drizzle-kit generate",
		"db:seed": "bun run src/lib/seed-postgres.ts",
		"sync:upstash": "bun run scripts/sync-products-to-upstash.ts"
	},
	"devDependencies": {
		"tsdown": "catalog:",
		"drizzle-kit": "catalog:"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@ai-sdk/google": "^3.0.10",
		"@mendable/firecrawl-js": "^4.11.1",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@trpc/client": "catalog:",
		"@trpc/server": "catalog:",
		"@upstash/redis": "^1.36.1",
		"@vit/logger": "workspace:*",
		"@vit/shared": "workspace:*",
		"@warriorteam/messenger-sdk": "^1.5.3",
		"ai": "^6.0.40",
		"android-sms-gateway": "^3.0.0",
		"better-sqlite3": "^12.4.1",
		"drizzle-orm": "catalog:",
		"drizzle-valibot": "^0.4.2",
		"hono": "catalog:",
		"ky": "^1.14.2",
		"nanoid": "^5.1.5",
		"postgres": "^3.4.7",
		"resend": "^4.0.1",
		"superjson": "^2.2.2",
		"valibot": "catalog:"
	}
}
