{
	"name": "@vit/api",
	"type": "module",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./db": {
			"types": "./src/db/index.ts",
			"default": "./src/db/index.ts"
		},
		"./db/schema": {
			"types": "./src/db/schema.ts",
			"default": "./src/db/schema.ts"
		},
		"./queries": {
			"types": "./src/queries/index.ts",
			"default": "./src/queries/index.ts"
		},
		"./integrations": {
			"types": "./src/lib/integrations/index.ts",
			"default": "./src/lib/integrations/index.ts"
		},
		"./*": {
			"types": "./src/*.ts",
			"default": "./src/*.ts"
		}
	},
	"scripts": {
		"build": "tsdown",
		"dev": "echo 'API package uses source files directly - no dev build needed'",
		"db:push": "drizzle-kit push",
		"db:migrate:local": "wrangler d1 migrations apply vit-store --local",
		"db:studio": "drizzle-kit studio",
		"db:studio:local": "drizzle-kit studio --config=./drizzle.local.config.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply vit-store --remote",
		"db:migrate:drizzle": "drizzle-kit migrate"
	},
	"devDependencies": {
		"tsdown": "catalog:",
		"drizzle-kit": "catalog:"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@trpc/client": "catalog:",
		"@trpc/server": "catalog:",
		"@vit/shared": "workspace:*",
		"@warriorteam/messenger-sdk": "^1.5.3",
		"android-sms-gateway": "^3.0.0",
		"better-sqlite3": "^12.4.1",
		"drizzle-orm": "catalog:",
		"drizzle-valibot": "^0.4.2",
		"hono": "catalog:",
		"nanoid": "^5.1.5",
		"superjson": "^2.2.2",
		"valibot": "catalog:"
	}
}
